<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.e2m.pcma"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.e2m.pcma.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.e2m.pcma.ContentActivity"
            android:label="@string/title_content_activity"
            android:parentActivityName="co.e2m.pcma.MenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ToolListActivity" />
        </activity>
    </application>

</manifest>
