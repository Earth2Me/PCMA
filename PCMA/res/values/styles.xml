<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Card">
        <item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:background">@drawable/card</item>
		<item name="android:padding">10dp</item>
		<item name="android:layout_marginBottom">5dp</item>
    </style>
    
    <style name="CardTitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">25sp</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:textColor">#555555</item>
    </style>
    
    <style name="CardText">
        <item name="android:textColor">#777777</item>
    </style>
    
    <style name="ScheduleLeft" parent="CardText">
		<item name="android:gravity">right</item>
		<item name="android:layout_width">70sp</item>
		<item name="android:layout_marginRight">20sp</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ScheduleRight" parent="CardText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>

</resources>
