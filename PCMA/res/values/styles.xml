<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="CardScroll">
        <item name="android:background">#EEEEEE</item>
		<item name="android:scrollbars">vertical</item>
    </style>
    <style name="CardLayout">
        <item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">16dp</item>
    </style>
    <style name="CardGeneric">
        <item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/card</item>
		<item name="android:padding">10dp</item>
		<item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="Card" parent="CardGeneric">
		<item name="android:orientation">vertical</item>
    </style>
    <style name="CardTitle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">25sp</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:textColor">#555555</item>
    </style>
    <style name="CardText">
        <item name="android:textColor">#777777</item>
    </style>
    
    <style name="ScheduleLeft" parent="CardText">
		<item name="android:gravity">right</item>
		<item name="android:layout_width">70sp</item>
		<item name="android:layout_marginRight">20sp</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ScheduleRight" parent="CardText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="FeedItem">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2.5dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
    </style>
    <style name="FeedImage">
        <item name="android:src">@drawable/ic_action_person</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:contentDescription">Friend Person</item>
    </style>
    <style name="FeedText" parent="CardText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Hello, Hackathon!</item>
    </style>
    
    <style name="ChatItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:layout_marginBottom">0.5dp</item>
    </style>
    <style name="ChatItemMe" parent="ChatItem">
        <item name="android:background">#DDE7FF</item>
    </style>
    <style name="ChatItemOther" parent="ChatItem">
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="ChatImage">
        <item name="android:src">@drawable/ic_action_person</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">Friend Person</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#77EEEEEE</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="ChatImageMe" parent="ChatImage">
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="ChatImageOther" parent="ChatImage">
        <item name="android:layout_marginRight">5sp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="ChatText" parent="CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Hello, Hackathon!</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="ChatTextMe" parent="ChatText">
        <item name="android:gravity">right</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="ChatTextOther" parent="ChatText">
        <item name="android:gravity">left</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    <style name="Keyword">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#0077CC</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_margin">7dp</item>
    </style>
</resources>
